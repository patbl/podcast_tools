#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative "../lib/podcast_tools/get_ea_global_youtube_urls"
require_relative "../lib/podcast_tools/download_youtube_audio"
require_relative "../lib/podcast_tools/bulk_download_youtube_audio"

page = ARGV[0].to_i.nonzero? || 1
urls = GetEaGlobalYoutubeUrls.new(page: page).call

BulkDownloadYoutubeAudio.call(urls)
