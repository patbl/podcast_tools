#!/usr/bin/env bash

mkdir -p padded
for file_name in "$@"; do
  base_name=$(basename -- "$file_name")
  extension="${base_name##*.}"
  silence_file="silence.$extension"
  ffmpeg -f lavfi -t 4 -i anullsrc "$silence_file"
  sox "$file_name" "$silence_file" "padded/$file_name"
  rm "$silence_file"
done
